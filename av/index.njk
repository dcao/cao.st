---
layout: base.njk
title: creative
---

<style>
</style>

<div class="py-12">
    <h1 class="font-serif font-extralight text-6xl text-keynote-700 pb-10">Creative</h1>
    <div class="text-2xl text-keynote-600">
        <div class="columns-md gap-2 space-y-2 md:mr-8">
            {%- for post in collections.av | reverse -%}
                <div class="relative break-inside-avoid-column w-full"{% if page.url == post.url %} aria-current="page"{% endif %}>
                    <a href="{{ post.url }}">
                        {% if post.data.cover %}
                            <img class="hover:filter hover:brightness-50 transition" alt="{{ post.data.alt or "" }}" src="{{ post.data.cover }}">
                            <p class="font-serif font-extralight text-keynote-100 p-4 absolute top-0 left-0">
                                {{ post.data.title }}
                            </p>
                        {% else %}
                            <p class="font-serif font-extralight text-keynote-100 p-4 pb-32 bg-keynote-800 hover:bg-keynote-900 transition">
                                {{ post.data.title }}
                            </p>
                        {% endif %}
                    </a>
                </div>
            {%- endfor -%}
        </div>

        <!-- we want a masonry layout, auto-generated from subpages in av -->
        <!-- https://tailwindcss.com/docs/columns#basic-usage -->
    </div>
</div>
